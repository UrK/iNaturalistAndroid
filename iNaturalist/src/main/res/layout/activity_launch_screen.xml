<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.tatzpiteva.golan.LaunchScreenActivity"
    android:background="@color/inatapptheme_color_grey_background"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_launch_screen"
            android:layout_margin="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<HorizontalScrollView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="200dp">-->
                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/layout_view_carousel"/>-->
            <!--</HorizontalScrollView>-->
            <android.support.v4.view.ViewPager
                android:id="@+id/pager_launch_carousel"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#32000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/inatapptheme_color_semitransparent_black">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended_observations"
                    android:textColor="@android:color/white"/>
                <LinearLayout
                    android:id="@+id/launch_carousel_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/button_launch_screen_new_obs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/launch_button_new_observation"
            android:drawableStart="@drawable/ic_button_launch_new"
            android:background="@drawable/button_launch_screen"
            android:textColor="@android:color/black"
            android:gravity="start|center_vertical"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/button_launch_screen_my_obs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/launch_button_my_observations"
            android:drawableStart="@drawable/ic_button_launch_my_obs"
            android:background="@drawable/button_launch_screen"
            android:textColor="@android:color/black"
            android:gravity="start|center_vertical"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:id="@+id/layout_project_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_launch_screen_tatzpiteva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:drawableStart="@drawable/ic_button_launch_project"
                android:background="@drawable/button_launch_screen"
                android:textColor="@android:color/black"
                android:gravity="start|center_vertical"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
