<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/side_bar_button_height"
              android:background="@drawable/side_menu_item_background"
              android:clickable="true"
              android:focusable="true"
              android:gravity="center_vertical"
              android:padding="10dp">
    <ImageView
        android:layout_width="@dimen/side_bar_button_icon_size"
        android:layout_height="@dimen/side_bar_button_icon_size"
        android:layout_marginStart="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_eye"
        android:id="@+id/side_menu_item_icon"/>
    <TextView
        android:id="@+id/side_menu_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/side_menu_text_size"
        android:textColor="#000000"
        android:layout_marginStart="@dimen/side_bar_button_margin_start"/>
</LinearLayout>
